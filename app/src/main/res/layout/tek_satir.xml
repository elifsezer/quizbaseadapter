<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/teksatirlayout"
                android:orientation="horizontal">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:id="@+id/tv_soru"/>

    <RadioGroup
            android:id="@+id/rgroup"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_soru">

        <RadioButton
                android:id="@+id/rbutton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textAllCaps="false" android:onClick="radiobutton_1"/>
        <RadioButton
                android:id="@+id/rbutton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textAllCaps="false" android:onClick="radiobutton_2"/>
        <RadioButton
                android:id="@+id/rbutton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textAllCaps="false" android:onClick="radiobutton_3"/>


    </RadioGroup>


</RelativeLayout>